{
  "extends": "@sourcegraph/tsconfig",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2021",
      "dom"
    ],
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "ts-graphql-plugin",
        "tag": "gql",
        "schema": {
          "http": {
            "url": "https://sourcegraph.com/.api/graphql"
          }
        }
      }
    ]
  },
}
